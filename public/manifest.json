{
  "manifest_version": 2,

  "name": "TapTrust Wallet",
  "description": "Ethereum Browser Extension",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/*",
    "notifications"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "TapTrust"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}